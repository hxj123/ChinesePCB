<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginStart="5dp"
            android:src="@drawable/enter_left"
            android:onClick="back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="个人信息"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="头像"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_avatar"
                android:scaleType="fitCenter"
                app:riv_oval="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_avatar"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="用户名"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_name"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="邮箱" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1317490530@qq.com"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_email"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_city_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="所在城市"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_city"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_address_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="家庭住址"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_address"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="联系电话"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17729840092"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_phone"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_money_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="账户余额"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10086.00"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_money"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/user_authentication_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="19sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="实名认证"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd= "true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/user_authentication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未实名"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/enter_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_authentication"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>

</LinearLayout>
